mixin icon(iconName, iconClass)
  svg(class=`${iconClass}`)
    use(xlink:href=`./assets/images/icons/sprite.svg#${iconName}`)

mixin image(imagePath, imageAlt, imageClass)
  img(src=`./assets/images/${imagePath}`, alt=`${imageAlt}`, class=`${imageClass}`)

mixin socials(socials, modClass)
  ul.socials(class=`${modClass}`)
    each item in socials
      li.socials__item
        a(href=`${item[0]}`).socials__link
          +icon(item[1], 'socials__link-icon')

mixin header-svg(modClass, color)
  .header-svg(class=`header-svg${modClass}`)
    svg(version='1.1', xmlns='http://www.w3.org/2000/svg', xmlns:xlink='http://www.w3.org/1999/xlink', x='0px', y='0px', width='100%', height='100%', viewbox='0 0 171.5 132.5', enable-background='new 0 0 171.5 132.5', xml:space='preserve')
      circle(fill=`${color}`, cx='4.25', cy='92.25', r='4.25')
      circle(fill=`${color}`, cx='48.25', cy='128.25', r='4.25')
      circle(fill=`${color}`, cx='72.75', cy='52.75', r='4.75')
      circle(fill=`${color}`, cx='8.25', cy='22.25', r='4.25')
      circle(fill=`${color}`, cx='117.25', cy='96.25', r='2.75')
      circle(fill=`${color}`, cx='126.25', cy='41.25', r='1.911')
      circle(fill=`${color}`, cx='167.25', cy='4.25', r='4.25')
      polyline(fill='none', stroke=`${color}`, stroke-miterlimit='10', points='72.75,52.75 117.25,96.25 4.25,92.25 48.25,128.25 \
      117.25,96.25 167.25,4.25 126.25,41.25 72.75,54.334 8.25,22.25 ')
      line(fill='none', stroke=`${color}`, stroke-miterlimit='10', x1='48.25', y1='131.334', x2='8.5', y2='24.339')

mixin menu(modClass)
  nav.menu(class=`${modClass}`)
    ul.menu__list
      -
        var menu = [
          ['works.html', 'Мои работы'],
          ['about.html', "Обо мне"],
          ['blog.html', "Блог"],
          ['/', "Авторизация"]
        ]
      each item in menu
          li.menu__item
            a.menu__link(href=`${item[0]}`) #{item[1]}

mixin hamburger(modClass)
  .hamburger(class=`${modClass}`)
    .line.one
    .line.two
    .line.three