extends ../auth.layout.pug

block content
  button.auth-button Авторизоваться

  .welcome-wrapper
    .welcome
      .avatar
        +image("me.jpg", "Мое фото", "avatar__img")
      h1.welcome__my-name Кирилл Бизюков
      p.welcome__description Личный сайт разработчика

      .socials
        - 
          var links = [
            {
              className: 'vk',
              link: 'https://vk.com/id18512732',
              target: '_blank'
            },
            {
              className: 'github',
              link: 'https://github.com/kbizukov',
              target: '_blank'
            },
            {
              className: 'in',
              link: '#',
              target: '_blank'
            }
          ]

        ul.socials__list
          each link in links
            li.socials__item
              a(class="socials__link" href=`${link.link}` target="_blank")
                +icon(`${link.className}`, 'socials__icon')

      nav.bottom-nav
        ul.bottom-nav__list
          li.bottom-nav__item.bottom-nav__item--works
            a(class="bottom-nav__link" href="works.html") Мои работы
          li.bottom-nav__item.bottom-nav__item--about
            a(class="bottom-nav__link" href="about.html") Обо мне
          li.bottom-nav__item.bottom-nav__item--blog
            a(class="bottom-nav__link" href="blog.html") Блог