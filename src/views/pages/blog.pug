extends ../main.layout.pug

block variables
  - var title = 'Блог'

block scripts
  script(src='blog.bundle.js')

block content
  include ../common/menu
  +hamburger('hamburger--menu')
  
  #swipe-menu-container

  section.hero.parallax-bg
    .hero__top
      .hero__links
        +socials('header')
      .hero__menu

    .hero__title.hero__title--blog
      .hero__title-svg-container
        include ../common/hero_title_svg

      .hero__user.hero__user--blog
        .user
          .user__avatar
            include ../common/avatar
          .user__description.hero__description
            h1.hero__title-header.block-title #{title}
            p.user__info Статьи, которые я написал

    #down-btn-container
      anchor-button(
        classes="down-btn hero__down-btn hero__down-btn--blog"
        scrollToElem="blog"
      )

    .hero__triangle
      svg.triangle(xmlns='http://www.w3.org/2000/svg' x='0px', y='0px', width='100%', height='100%', viewbox='0 0 2032 175.368')
        polygon(fill='#faf8f0', points='2032,177.368 2032,0 1016,175 0,0 0,177.368')

  #blog-container


  include ../common/footer