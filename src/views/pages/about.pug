    .about__right
      .about__triangle
        +icon('about_bg_right', 'triangle triangle_fill_brown')

      .about__right-title
        h2.block-subtitle Чем я могу быть вам полезен
      .about__right-description.text-content
        p Lorem ipsum dolor sit amet consectetur adipisicing elit. Amet sunt vero fuga eos illo maiores necessitatibus molestiae unde aut quia, magnam deleniti dolore recusandae quos, facere, iste fugiat eaque ipsa!
      .about__right-content
        -
          var skills = [
            ['Frontend', [['HTML5', 70], ['CSS3', 70], ['JavaScript & jQuery', 70]]],
            ['Backend', [['PHP', 35], ['mySQL', 50], ['Node.js & npm', 40], ['Mongo.db', 0]]],
            ['Workflow', [['Git', 40], ['Gulp', 50], ['Bower', 70]]]
          ]
        ul.skills-list
          each skillsrow in skills
            //- - console.log(skillsrow)
            li.skills-list__item.skills-row
              h3.skills-row__title #{skillsrow[0]}
              ul.skills-row__list
                each skill in skillsrow[1]
                  li.skills-row__item
                    figure.skill(data-percents=`${skill[1]}`)
                      svg(viewBox="0 0 100 100" preserveAspectRation="none").skill__figure
                        circle(cx="50" cy="50" r="40").skill__circle.skill__circle_under
                        circle(cx="50" cy="50" r="40").skill__circle.skill__circle_above
                    span.skill__title.skills-row__text #{skill[0]}
    
  section.map
    .google-map

    .map__data
      .contacts
        .contacts__title
          h2.block-subtitle Контакты
        address.contacts__data
          ul.contacts__list
            -
              var contacts = [
                ['skype', 'skype_kdn'],
                ['skype', 'skype_kdn'],
                ['skype', 'skype_kdn'],
                ['skype', 'skype_kdn']
              ]
            each item in contacts
              li.contacts__item.contacts-row
                .contacts-row.contacts__icon
                  +icon(`${item[0]}`, 'contacts__icon-img')
                .contacts-row.contacts__title #{item[1]}

  
