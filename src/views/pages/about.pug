extends ../main.layout.pug

block variables
  - var title = 'Обо мне'

block scripts
  script(src='about.bundle.js')

block content
  section.hero
    .hero__top
      .hero__links
        include ../common/socials
    
      .hero__menu
        a(href="").hamburger.inlined-svg

    .hero__title
      .section-title.section-title--hero-title
        +icon('stars1', 'section-title__pic')

      .hero__user
        include ../common/user
    
    
    a(href="").down-btn.hero__down-btns

  section.about
    .about__left
      .about__triangle
        +icon('about_bg_left', 'triangle triangle_fill_beige')

      .about__left-wrapper
        .about__left-title
          h1.block-title Обо мне
        .about__left-content
          .user-description
            .user-description__image
              +image("me-big.jpg", "Мое фото", "user-description__avatar")
            .user-description__data
