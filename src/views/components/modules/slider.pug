script(type="text/x-template")#slider
  .slider
    info(
      :work="currentWork"
    )
    display(
      :work="currentWork"
    )
    buttons(
      :works="works"
      :currentIndex="currentIndex"
      @slide="handleSlide"
    )

script(type="text/x-template")#slider-info
  .slider__info-container
    .slider__info
      .slider__info-title
        h2.block-subtitle.block-subtitle--works.subtitle {{work.title}}
      .slider__info-skills {{work.skills}}
      .slider__info-button
        +icon('link', 'slider__info-icon')
        a(:href="work.link" target="_blank").slider__info-link Посмотреть сайт

script(type="text/x-template")#slider-display
  .slider__display
    img(:src="work.photo").slider__big-pic

script(type="text/x-template")#slider-buttons
  .slider__buttons
    .slider__button.slider__button(@click="slide('prev')")
      .slider__button-img-wrap
        img(:src="getReqImage('prev').photo", alt="").slider__button-pic
    .slider__button.slider__button--next(@click="slide('next')")
      .slider__button-img-wrap
        img(:src="getReqImage('next').photo", alt="").slider__button-pic
