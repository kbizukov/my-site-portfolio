script(type="text/x-template")#preloader
    .preloader-container
      transition(
        appear
        tag="div"
        name="preloader"
      )
        template(v-if="!loaded")
          .preloader
              .preloader__wrapper
                svg.preloader__icon(width='100%' height='100%' viewbox='0 0 78 78')
                  circle.preloader__circle(fill='none' stroke='#fff' stroke-width='2.5864' stroke-miterlimit='10' cx='26.293' cy='37.438' r='25')
                  circle.preloader__rotative(fill='#fff' cx='26.293' cy='4.5' r='4.5')
                span.preloader__percents {{percents}}