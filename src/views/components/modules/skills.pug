script(type="text/x-template")#skills-list
  ul.skills-list
    li.skills-list__item.skills-row(v-for="skill in skills")
      skills-row(
        :skill="skill"
      )


script(type="text/x-template")#skills-row
  .skills-list__item.skills-row
    h3.skills-row__title {{skill.skillGroup}}
    ul.skills-row__list
      li.skills-row__item(v-for="(skillPercents, skillName) in skill.skills")
        skill(
          :skillName="skillName",
          :skillPercents="skillPercents"
        )

script(type="text/x-template")#skill
  .skills-row__item
    figure.skill(:data-percents="skill[1]")
      svg(viewBox="0 0 100 100" preserveAspectRation="none").skill__figure
        circle(cx="50" cy="50" r="40").skill__circle.skill__circle_under
        circle(cx="50" cy="50" r="40" :stroke-dashoffset="skill[2]" :opacity="'0.'+skill[1]" ref="color-circle").skill__circle.skill__circle_above
      span.skill__title CSS
        